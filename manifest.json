{
  "manifest_version": 3,
  "name": "AI Reply Assistant for Threads & Twitter/X",
  "version": "1.0",
  "description": "AI-powered reply suggestions for Threads and Twitter/X posts",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Reply Assistant Settings"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.threads.com/*",
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": ["anime.min.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}